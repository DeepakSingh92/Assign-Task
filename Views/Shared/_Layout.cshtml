<body>
    
        <nav class="navbar  navbar-expand-lg navbar-light bg-dark mb-4" style="border-radius:0px !important;">
            <div class="container-fluid">
                <a style="color:white;" class="navbar-brand" href="#">Assign-Task</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a style="color:white;" class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>

                        @if (ESCommon.clsMain.MyInt(Session["UserType"]) == 1 || ESCommon.clsMain.MyInt(Session["UserType"]) == 2 || ESCommon.clsMain.MyInt(Session["UserType"]) == 3)
                        {
                            <li class="nav-item">
                                <a style="color:white;text-decoration:none;" class="nav-link" href="/Home/UserTaskEntryList">My Task</a>
                            </li>

                        }
                        @if (ESCommon.clsMain.MyInt(Session["UserType"]) == 0 || ESCommon.clsMain.MyInt(Session["UserType"]) == 2)
                        {
                            <li class="nav-item dropdown">
                                <a style="color:white;text-decoration:none;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Menu
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Home/ProjectList">Project</a></li>
                                    <li><a class="dropdown-item" href="/Home/AddTaskList">Task</a></li>
                                    <li><a class="dropdown-item" href="/Home/UserList">User</a></li>
                                    <li><a class="dropdown-item" href="/Home/ClientList">Client </a></li>
                                    <li><a class="dropdown-item" href="/Home/References">References</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Other Links</a></li>

                                </ul>
                            </li>
                        }

                            @if (ESCommon.clsMain.MyInt(Session["UserType"]) == 0)
                            {
                                <li class="nav-item dropdown">
                                    <a style="color:white;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Reports
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">



                                        <li><a class="dropdown-item" href="/Home/UserTaskStatus">User Report</a></li>
                                        <li><a class="dropdown-item" href="/Home/ProjectTaskStatus">Project Report</a></li>
                                        <li><a class="dropdown-item" href="/Home/TodayUserTask">Task Report</a></li>
                                        <li><a class="dropdown-item" href="/Home/CheckinList">Check In Report</a></li>
                                        <li><a class="dropdown-item" href="/Home/CompletedTaskList">Completed Task</a></li>

                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#">User LogIn Details</a></li>
                                    </ul>
                                </li>
                            }
                            <li class="nav-item">
                                <a style="color:dodgerblue;" class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                            </li>
                        </ul>
                    <div class="right " style="display:flex;justify-content:center;align-items:center;justify-content:flex-end;text-align:center;margin-top:10px;">
                        @*<span style="color:dodgerblue;">LogOut</span>*@
                        <button type="submit" class="btn btn-danger" onclick="location.href=' @Url.Action("Logout","Home")'">LogOut</button>
                        <span style="margin-left:10px;color:white;">@Session["UserName"]</span>
                    </div>

                    @*<form class="d-flex mt-2" style="justify-content:end;align-items:center;">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" style="width:50%;">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>*@
                </div>
            </div>
        </nav>
