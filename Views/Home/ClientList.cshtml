
@{
    ViewBag.Title = "ClientList";
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/App/app.js"></script>
<script src="~/App/Admin/ClientEntry.js"></script>


<div class="container-fluid" ng-app="app" ng-controller="ClientEntry">

    <div class="container-fluid" style="margin-bottom:5px;">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="d-grid gap-2 d-md-block">
                    <button class="btn btn-primary" type="button" onclick="location.href=' @Url.Action("ClientEntry","Home")'">Add Client</button>
                    <button class="btn btn-warning" type="button">Button</button>
                </div>
            </div>
            <div class="col-lg-6" style="display:flex;justify-content:flex-end;">
                <input style="width:50%;margin-right:5px;" class="form-control " type="search" placeholder="Search" aria-label="Search" ng-model="Find.$">
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="table-responsive pre-scrollable">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>

                        <th>
                            Client Name
                        </th>
                        <th>
                            Phone No
                        </th>
                        <th>
                            Contact Person
                        </th>
                        <th>
                            Email Id
                        </th>
                    </tr>
                </thead>
                <tbody>

                    <tr ng-repeat="item in ListClientEntry | filter: Find" ng-click="fnClick(item.ID)" style="cursor: pointer">
                        <td>
                            <a href="/Home/ClientEntry?VisitCId={{item.ID}}">{{item.ClientName}}</a>
                        </td>
                        <td>
                            {{item.PhoneNo}}
                        </td>
                        <td>
                            {{item.ContactPerson}}
                        </td>
                        <td>
                            {{item.EmailId}}
                        </td>
                        @* <td ng-int="hidebutton()">{{item.mis}}
                            </td>*@
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
   
    <label id="lblclientid" ng-model="VisitorCID" style="visibility: collapse;">0</label>
</div>





