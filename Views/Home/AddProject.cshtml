
@{
    ViewBag.Title = "AddProject";
}



<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/App/app.js"></script>
<script src="~/App/Admin/ProjectList.js?1501"></script>


<div class="container-fluid" ng-app="app" ng-controller="ProjectListData">
    <div class="container-fluid" style="margin-bottom:5px;">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-grid gap-2 d-md-block">
                    <button class="btn btn-primary" type="button" onclick="location.href=' @Url.Action("ProjectList","Home")'">Back To ProjectList</button>
                    <button class="btn btn-warning" type="button" ng-click="SubmitDisc()">Save Project</button>
                </div>
            </div>
        </div>
    </div>


    <div class="jumbotron" style="background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%); ">

        <div class="row  row-cols-4" >
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label for="Proj"><b ng-style="lblproject;">ProjectName<span style="color: red">*</span></b></label>
                    <input class="form-control " style="width:100%;height:100%" type="text" autocomplete="off" id="Proj" ng-model="ProjectName" ng-focus="lblproject={color:'blue'}" ng-blur="lblproject={color:'black'}" placeholder="Enter ProjectName " name="ProjectName">
                </div>
            </div>

              
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectDesc;">ProjectDescription</b></label>

                    <textarea class="form-control" style="width: 100%; height: 100%" rows="1" ng-model="ProjectDescription" ng-focus="lblprojectDesc={color:'blue'}" ng-blur="lblprojectDesc={color:'black'}"></textarea>
                </div>
            </div>

            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojectpm;">ProjectManager<span style="color: red">*</span></b></label>

                    <select class="form-control" style="width: 100%; height: 100%" ng-model="ProjectManager" ng-focus="lblprojectpm={color:'blue'}" ng-blur="lblprojectpm={color:'black'}">
                        <option ng-repeat="item in ListAssignTo" ng-selected="ProjectManager=={{item.Code}}" value="{{item.Code}}">{{item.Desc}}</option>
                    </select>

                </div>

            </div>

            <div class="col">

                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojecttl;">TeamLeader</b></label>
                    <select class="form-control" style="width: 100%; height: 100%" ng-model="ProjectLeader" ng-focus="lblprojecttl={color:'blue'}" ng-blur="lblprojecttl={color:'black'}">
                        <option ng-repeat="item in ListAssignTo" ng-selected="TeamLeader=={{item.Code}}" value="{{item.Code}}">{{item.Desc}}</option>
                    </select>
                </div>
            </div>
        </div>


        <div class="row row-col-4">
          
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectcli;">ClientName<span style="color: red">*</span></b></label>
                    <select class="form-control" style="width: 100%; height: 100%" ng-model="Client" ng-focus="lblprojectcli={color:'blue'}" ng-blur="lblprojectcli={color:'black'}">
                        <option ng-repeat="item in ListClient" ng-selected="Client=={{item.ID}}" value="{{item.ID}}">{{item.ClientName}}</option>
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectref;">ReferenceName </b></label>
                    <select class="form-control" style="width: 100%; height: 100%" ng-model="ReferenceID" ng-focus="lblprojectref={color:'blue'}" ng-blur="lblprojectref={color:'black'}">
                        <option ng-repeat="item in ListReferenceName" ng-selected="ReferenceID=={{item.ID}}" value="{{item.ID}}">{{item.ReferenceName}}</option>
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojectcp;">ContactPerson </b></label>
                    <input class="form-control " style="width: 100%; height: 100%" type="text" ng-model="ContactPerson" ng-focus="lblprojectcp={color:'blue'}" ng-blur="lblprojectcp={color:'black'}" />

                </div>
            </div>
            <div class="col">

                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojectmob;">Mobile </b></label>


                    <script language="javascript" type="text/javascript">
                        function limitText(limitField, limitNum) {
                            if (limitField.value.length > limitNum) {
                                alert("Enter 10 digit Number");
                                limitField.value = limitField.value.substring(0, limitNum);
                            }
                        }
                    </script>
                    <input class="form-control" style="width: 100%; height: 100%" type="text" onkeyup="limitText(this,10);" onkeydown="limitText(this,10);" ng-model="PhoneNo" ng-focus="lblprojectmob={color:'blue'}" ng-blur="lblprojectmob={color:'black'}" ng-keypress="AllowDigitonly($event)" />


                </div>
            </div>
        </div>
          
        <div class="row row-cols-4">

            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojectval;">ProjectValue </b></label>
                    <input class="form-control " style="width: 100%; height: 100%" type="text" ng-model="ProjectValue" ng-focus="lblprojectval={color:'blue'}" ng-blur="lblprojectval={color:'black'}" ng-keypress="AllowDigitonly($event)" />
                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label for="time"><b ng-style="lblprojectadv;">ProjectAdvance </b></label>
                    <input class="form-control " style="width: 100%; height: 100%" type="text" ng-model="ProjectAdvance" ng-focus="lblprojectadv={color:'blue'}" ng-blur="lblprojectadv={color:'black'}" ng-keypress="AllowDigitonly($event)" />
                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectstr;">EstimatedStartDate </b></label>
                    <input class="form-control" style="width: 100%; height: 100%" id="EsDate" name="EsDate" type="date" value="{{EstimatedStartDate | date:'yyyy-MM-dd'}}" ng-model="EstimatedStartDate" ng-focus="lblprojectstr={color:'blue'}" ng-blur="lblprojectstr={color:'black'}" />
                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectend;">EstimatedEndDate</b></label>
                    <input class="form-control" style="width: 100%; height: 100%" id="CoDate" name="CoDate" type="date" value="{{EstimatedTargetDate | date:'yyyy-MM-dd'}}" ng-model="EstimatedTargetDate" ng-focus="lblprojectend={color:'blue'}" ng-blur="lblprojectend={color:'black'}" />
                </div>
            </div>
        </div>

        <div class="row row-cols-2">
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectat;">AssignTo</b></label>

                    <select class="form-control" style="width: 100%; height: 100%" ng-model="AssignTo" ng-focus="lblprojectat={color:'blue'}" ng-blur="lblprojectat={color:'black'}">
                        <option ng-repeat="item in ListAssignTo" ng-selected="AssignTo=={{item.Code}}" value="{{item.Code}}">{{item.Desc}}</option>

                    </select>

                </div>
            </div>
            <div class="col">
                <div class="form-input" style="margin-bottom: 40px">
                    <label><b ng-style="lblprojectprio;">Priority </b></label>
                    <select class="form-control" style="width: 100%; height: 100%" ng-model="PriorityID" ng-focus="lblprojectprio={color:'blue'}" ng-blur="lblprojectprio={color:'black'}">
                        <option ng-repeat="item in Listpriority" ng-selected="PriorityID=={{item.ID}}" value="{{item.ID}}">{{item.priority1}}</option>
                    </select>
                </div>
            </div>
        </div>
             

              





          



    </div>
   

    <label id="lbltaskid" ng-model="VisitorPID" style="visibility: collapse;">@ViewBag.VisitorPID</label>
    <label id="UserCode" ng-model="EmpCode" style="visibility: collapse;">@Session["UserCode"]</label>
    <label id="EmpId" ng-model="ProjID" style="visibility: collapse;"></label>
</div>
